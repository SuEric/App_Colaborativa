// Variables de colores
buap_oscuro = #003B5C
buap_claro = #00B5E2
ciencias_exactas = #FF7103
gris_oscuro = #444
gris_texto = #7A7A7A

// Estandarizar todo el documento
a
	color ciencias_exactas
	
.btn
	background rgba(ciencias_exactas, 0.4)
	border none
	border-radius 4px
	box-shadow 1px 1px 5px buap_oscuro
	color buap_oscuro
	padding 0.5em
	text-decoration none
	
	&:hover
		background buap_oscuro
		color white
		
.modal
	position fixed
	font-family Arial, Helvetica, sans-serif
	top 0
	right 0
	bottom 0
	left 0
	background rgba(0, 0, 0, 0.8)
	z-index 9999
	opacity 0
	-webkit-transition opacity 400ms ease-in
	-moz-transition opacity 400ms ease-in
	transition opacity 400ms ease-in
	pointer-events none
	
	&:target
		opacity 1
		pointer-events auto
						
	.contenido_modal
		background #EEEEEE
		border-radius 10px
		height 80%
		margin 1em auto
		overflow auto
		padding 5px 20px 13px 20px
		position relative
		width 80%
		
		&::-webkit-scrollbar
			display none
		
		.cerrar_modal
			background #606061
			border-radius 12px
			box-shadow 1px 1px 3px #000
			color #FFFFFF
			font-weight bold
			line-height 25px
			position absolute
			right -2px
			text-align center
			text-decoration none
			top -2px
			width 24px
				
		h2
			margin 0
			padding 0.5em 0
		
.hide
	display none

body
	background #EEEEEE
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background buap_oscuro
	color white
	padding 1em 0
	text-align center
	
	.fcc
		display block
		&:before
		&:after
			content " - "
	
	h3
		font-family Avenir Next
		font-size 0.8em
		font-weight normal
		margin 0

header
	background buap_oscuro
	box-shadow 0 5px rgba(buap_oscuro, 0.2)
	color white
	font-family Avenir Next
	padding 0.5em
	position relative
	overflow hidden
	z-index 1
	
	.logo
		//background buap_oscuro
		border-right 1px solid ciencias_exactas
		float left
		width 70px
		
		img
			width 62px
			
	.middle
		margin 0 30px 0 80px
		
		.titulo
			font-size 1.2em
			font-weight normal
			margin 0
			
		.subtitulo
			color buap_claro
			font-size 1em
			font-style italic
			font-weight normal
			margin 0
			text-decoration none
			
			&:hover
				background rgba(ciencias_exactas, 0.5)

	.right
		position absolute
		top 0.5em
		right 0.5em
		
		img
			width 43px
	
nav
	background #AAAAAA
	border-left 15px solid buap_claro
	position relative
	
	&:before 
		border-bottom 20px solid transparent
		border-left 7px solid buap_claro
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
		
	.menu
		height 40px
		line-height 40px // Ocupe el total de 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		// Ocultamiento de barra
		&::-webkit-scrollbar
			display none
		
		li
			display inline-block
			
			a
				color buap_oscuro
				display block
				padding 0 1em
				text-decoration none
				
				&:hover
					background rgba(buap_oscuro, 0.2)		

.secciones
	padding 1em
	clear left
	
	.content
		margin-bottom 1em
		padding 0.5em
		
		.content_titular
			font-weight normal
			margin 0 0 0.5em 0
			padding 0
	
	.seccion
		box-shadow 2px 2px 10px rgba(buap_oscuro, 0.5)
		margin-bottom 10px
		text-align center
		
		.contenido
			background rgba(buap_oscuro, 0.2)
			border-top 2px solid buap_oscuro
			height 160px
			padding 0.5em
			overflow hidden
			text-align left		

			.tabla
				border 0
				border-collapse collapse
				border-spacing 0
				display block
				height 160px
				margin 0 auto
				padding 0
				overflow auto
				
				&::-webkit-scrollbar
					display none
				
				tbody
					display block
					height 160px

					tr
						background rgba(white, 0.8)
						border 1px solid buap_oscuro
						border-bottom 2px solid buap_oscuro
						margin-bottom 10px
								
						td
							border-bottom 1px dotted buap_oscuro
							text-align right
							padding 0.6em
							vertical-align top
							
							&:before
								content attr(data-label)
								float left
								font-weight bold
								margin-right 1.5em
								text-transform uppercase
								
							&:last-child
								border-bottom 0
								
							&:hover 
								background rgba(black, 0.3)
								
							.agregar_revisor
								display block
								margin 0 0 0 auto
								text-decoration none
								width 40px
								
								&:before
									content "\e973"
									color buap_oscuro
									font-family "iconitos"
									font-size 2.0em
									font-variant normal
									line-height 1
									speak none
									text-transform none
									vertical-align middle
									
							.dictamen_final
								text-decoration none
								
								&:before
									content "\e9a8"
									color buap_oscuro
									font-family "iconitos"
									font-size 2.5em
									font-variant normal
									line-height 1
									speak none
									text-transform none
									vertical-align middle
									
							.tablita
								display inline-block
								font-size 0.8em
								width 50%
								
								tbody
									height auto
									
									tr
										background rgba(ciencias_exactas, 0.4)
										
										td
											.eliminar_revisor
												display inline-block
												margin-left 1em
												text-decoration none
												
												&:before
													color buap_oscuro
													content "\e974"
													font-family "iconitos"
													font-size 1.4em
													font-variant normal
													line-height 1
													speak none
													text-transform none
													vertical-align middle
										
								thead
									th
										padding 0.6em
					
				thead
					display none
					
					th
						background rgba(ciencias_exactas, 0.4)
						padding 0.8em
						letter-spacing 1px
						text-align center
						text-transform uppercase
				
				tr
				td
					display block

		.titular
			background rgba(ciencias_exactas, 0.8)
			color white
			font-family Avenir Next
			font-size 1.1em
			font-style italic
			font-weight normal
			margin 0
			padding 0.5em 0
			text-align center

@media screen and (min-width: 768px)
	header
		.logo
			width 100px

			img
				width 92px
				
		.middle
			margin 0 30px 0 110px

			.titulo
				font-size 1.7em
				
			.subtitulo
				font-size 1.5em
		
		.right
			img
				width 77px
				
	.secciones
		.content
			.content_titular
				font-size 1em
				
		.seccion
			.contenido
				height 260px
				overflow auto
				
				&::-webkit-scrollbar
					display none
				
				.tabla
					display table
					background white
					height 260px
					
					tbody
						display table-row-group
						height 260px
						
						tr
							
							&:hover
								background rgba(black, 0.3)
						
							td
								&:before
									content none
									
								&:hover
									background none
									
								.tablita
									display table
									width 100%
									
									tbody
										tr
											background none
										
					thead
						display table-header-group
						
					td
						border-bottom none
						display table-cell
						text-align center
						
					tr
						border 1px solid buap_oscuro
						display table-row